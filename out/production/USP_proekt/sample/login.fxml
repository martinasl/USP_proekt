<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <ImageView fitHeight="414.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/B (2).png" />
               </image>
            </ImageView>
            <TextField fx:id="emailText" layoutX="444.0" layoutY="161.0" opacity="0.75" promptText="E-mail" />
            <Button fx:id="loginButton" layoutX="474.0" layoutY="282.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="90.0" text="Log In">
               <font>
                  <Font name="SimSun-ExtB" size="10.0" />
               </font>
            </Button>
            <Text fontSmoothingType="LCD" layoutX="489.0" layoutY="127.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
               <font>
                  <Font name="SimSun-ExtB" size="24.0" />
               </font>
            </Text>
            <Hyperlink layoutX="492.0" layoutY="319.0" text="Registration">
               <font>
                  <Font name="SimSun-ExtB" size="8.0" />
               </font>
            </Hyperlink>
            <PasswordField fx:id="enterPasswordField" layoutX="445.0" layoutY="207.0" opacity="0.75" promptText="Password" />
            <Label fx:id="errorText" layoutX="460.0" layoutY="253.0" prefHeight="13.0" prefWidth="118.0" textFill="RED" />
      </children>
    </AnchorPane>
  </children>
</VBox>
